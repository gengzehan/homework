#include <stdio.h>
#include <stdlib.h>
int todec(char *p,int jin)
{
    int num=0,count=0,i=0,num1=1,i1=0;
    while (*p != '\0')
		{
			p++;
			count++;
		}
		p--;
		while (count != 0)
		{
			while(i1<i)
            {
                num1*=jin;
                i1++;
            }
			i++;
			num += (*p - 48)*num1;
			p--;
			count--;
		}
		return num;
}

void binandoct(int a,int b)
{
    int num1, num2, recorde[100], i = 0;
	num1 = 0;
	num2 = a;
	do
	{
		num1 = num2 % b;
		num2 = num2 / b;
		recorde[i] = num1;
		i++;
	} while (num2);
	i--;
	while (i >= 0)
	{
		printf("%d", recorde[i]);
		i--;
	}
}

int tonum(char *p, int choice)
{
	int num = 0, num1 = 1, count = 0, i = 0, i1 = 0, i3 = 0;
	switch (choice)
	{
	case 1:
		return todec(p,10);
		break;
	case 2:
		return todec(p,2);
		break;
	case 3:
		return todec(p,8);
		break;
	case 4:
		while (*p != '\0')
		{
			p++;
			count++;
		}
		p--;
		while (count != 0)
		{
			num1 = 1;
			i1 = 0;
			while (i1<i)
			{
				num1 *= 16;
				i1++;
			}
			i++;
			if (*p >= 'A')
			{
				if (*p >= 'a')
					i3 = (*p - 87);
				else
					i3 = (*p - 55);
			}
			else
			{
				i3 = *p - 48;
			}

			num += i3*num1;
			p--;
			count--;
		}
		return num;
		break;
	}
}


int toany(int a)
{
    int num1, num2,recorde[100], i = 0;
    char hex[100];
    printf("二进制为:");
	binandoct(a,2);
	printf("\n---------------\n");
	printf("八进制为:");
	binandoct(a,8);
    printf("\n---------------\n");
    num1 = 0;
	i = 0;
	num2 = a;
	do
	{
		num1 = num2 % 16;
		num2 = num2 / 16;
		if(num1>=10)
            hex[i]=(char)(num1+87);
        else
            hex[i]=(char)(num1+48);
		i++;
	} while (num2);
	i--;
	printf("十六进制为:");
	while (i >= 0)
	{
		printf("%c", hex[i]);
		i--;
	}

}

int judge(char *p, int choice)
{
	switch (choice)
	{
	case 1:
		while (*p != '\0')
		{
			if (('0'>*p) || (*p>'9'))
			{
				return 0;
			}
			p++;
		}
		break;
	case 2:
		while (*p != '\0')
		{
			if ((*p<'0') || (*p>'1'))
			{
				return 0;
			}
			p++;
		}
		break;
	case 3:
		while (*p != '\0')
		{
			if ((*p<'0') || (*p>'7'))
			{
				return 0;
			}
			p++;
		}
		break;
	case 4:
		while (*p != '\0')
		{
			if (*p<48 || (*p>57 && *p<65) || (*p>70 && *p<97) || (*p>102))
				return 0;
			p++;
		}
		break;
	}


	return 1;
}

int main(int argc, char* argv[])
{
	char num[100], hp[100];
	int choice, i = 0, flag, tennum;
	printf("欢迎使用进制转换程序！\n");
	printf("1.十进制\n2.二进制\n3.八进制\n4.十六进制\n0.退出\n");
	printf("请选择输入数据的进制:");
	scanf("%d", &choice);
	switch (choice)
	{
	case 1:
		printf("请输入十进制数据:");
		getchar();
		scanf("%s", num);
		flag = judge(num, choice);
		break;
	case 2:
		printf("请输入二进制数据:");
		getchar();
		scanf("%s", num);
		flag = judge(num, choice);
		break;
	case 3:
		printf("请输入八进制数据:");
		getchar();
		scanf("%s", num);
		flag = judge(num, choice);
		break;
	case 4:
		printf("请输入十六进制数据:");
		getchar();
		scanf("%s", num);
		flag = judge(num, choice);
		break;
	default: return 0;
	}
	if (flag == 0)
	{
		printf("输入错误\n");
		return 0;
	}
	tennum = tonum(num, choice);
	printf("---------------\n");
	printf("十进制为：%d",tennum);
	printf("\n---------------\n");
	toany(tennum);

}
